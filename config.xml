<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.homeesp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HomeESP</name>
    <description>
        App para automação residencial.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
	<icon src="www/img/logo.png" platform="Android" width="57" height="57" density="mdpi" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-battery-status" spec="1.2.5" />
	<plugin name="cordova-plugin-dialogs" spec="1.3.4" />
	<plugin name="cordova-plugin-vibration" spec="1.2.0" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
